#!/bin/bash
# Este script hace algo Ãºtil
sudo -S <<< usuario apt update -y && sudo apt upgrade -y
sudo -S <<< usuario apt install sshpass
sshpass -p usuario ssh -o StrictHostKeyChecking=no usuario@192.168.239.231
sudo -S <<< usuario hostnamectl set-hostname Server
echo bash
echo "usuario" | sudo -S chpasswd <<< "root:melon"
sudo cp /etc/netplan/50-cloud-init.yaml /etc/netplan/50-cloud-init.yaml.bkup 
echo "usuario" | sudo -S rm /etc/netplan/50-cloud-init.yaml
echo "usuario" | sudo -S touch /etc/netplan/50-cloud-init.yaml
echo "usuario" | sudo -S bash -c 'cat > /etc/netplan/50-cloud-init.yaml <<EOF
network:
    ethernets:
        enp1s0:
            dhcp4: false
            addresses:
            - 192.168.239.231/22
            routes:
                - to: default
                  via: 192.168.236.1
            nameservers:
                addresses: [192.168.236.1]
    version: 2
EOF
netplan apply'
